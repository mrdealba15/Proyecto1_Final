<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cursos_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:transitionName="layout_transition">

        <TextView
            android:id="@+id/rubrica_textView"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/initial_size"
            android:transitionName="initial_transition" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/editar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="OnclickEditar"
                android:text="Editar"
                android:layout_weight="0.33" />

            <Button
                android:id="@+id/ver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="OnclickVer"
                android:text="Ver"
                android:layout_weight="0.33" />
            <Button
                android:id="@+id/eliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="OnclickEliminar"
                android:text="Eliminar"
                android:layout_weight="0.33" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>