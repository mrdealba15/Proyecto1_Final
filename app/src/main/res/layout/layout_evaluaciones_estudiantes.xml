<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="409dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:transitionName="layout_transition">

        <TextView
            android:id="@+id/estudiante_eval_textview"
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/initial_size"
            android:transitionName="initial_transition" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/calificar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificar"
                android:transitionName="delete_button_transition" />


            <Button
                android:id="@+id/ver_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickEvaluations"
                android:text="Ver" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>